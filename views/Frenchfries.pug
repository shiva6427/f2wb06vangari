extends layout

block content

  h1= title
  -
    let results = [
      {
        "Order_Name": "Crispy Chicken Sandwich ",
        "Order_quantity": "3",
        "Order_price": 24
      },
      {
        "Order_Name": "Snickers Blast",
        "Order_quantity": "2",
        "Order_price": 18
      },
      {
        "Order_Name": "Cheese Pizza",
        "Order_quantity": "1",
        "Order_price": 15
      },                   
    ]
  div(class= "container-fluid")
    div(class = "row")
      each item,index in results
        div(class= "col-sm-2" , onclick='buy(${index})') #{item.Order_Name}
        div(class= "col-sm-2",  onclick='buy(${index})') #{item.Order_quantity}
        div(class= "col-sm-2",  onclick='buy(${index})') #{item.Order_price}

  script.
    function buy(itemNum){
      alert('The purchased item is ${itemNum+1}')
    }